# MMA Database Backend - Windows Configuration
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=MMA Database Backend

# Database Configuration
DATABASE_URL=postgresql://mma_user:mma_password@localhost:5432/mma_database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mma_database
DB_USER=mma_user
DB_PASSWORD=mma_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# API Keys (for AI data completion)
OPENAI_API_KEY=your-openai-api-key-optional

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# CORS Configuration (adjust for your frontend domains)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log